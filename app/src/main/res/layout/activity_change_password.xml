<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".Change_Password">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/edit_text_shape"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#99000000"
                    android:textColorHint="#80FFFFFF"
                    android:textCursorDrawable="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/newpass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/edit_text_shape"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#99000000"
                    android:textColorHint="#80FFFFFF"
                    android:textCursorDrawable="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/oldpass" />

                <EditText
                    android:id="@+id/connewpass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/edit_text_shape"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="Confirm Password"
                    android:inputType="text|textPassword"
                    android:paddingStart="20dp"
                    android:textColor="@color/white"
                    android:textColorHighlight="#99000000"
                    android:textColorHint="#80FFFFFF"
                    android:textCursorDrawable="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newpass" />

                <EditText
                    android:id="@+id/captcha"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/edit_text_shape"
                    android:digits="0123456789"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Enter Captcha"
                    android:inputType="number"
                    android:letterSpacing=".50"
                    android:maxLength="6"
                    android:paddingStart="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#99000000"
                    android:textColorHint="#80FFFFFF"
                    android:textCursorDrawable="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/captchacode" />

                <Button
                    android:id="@+id/changepass"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_shape"
                    android:text="Save Changes"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/captcha" />

                <TextView
                    android:id="@+id/captchacode"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/fredericka_the_great"
                    android:text="Captcha"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/connewpass" />

                <Button
                    android:id="@+id/captcharefresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_refresh"
                    app:layout_constraintStart_toEndOf="@+id/captchacode"
                    app:layout_constraintTop_toBottomOf="@+id/connewpass" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#100F0F"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Cancel"
        android:textColor="#00C4FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>